{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Admin username on all VMs."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Admin password on all VMs."
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-11-01",
            "name": "Web_subnet_NSG",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "allowHTTP",
                        "properties": {
                            "description": "Allow HTTP 80 to Public Load Balancer.",
                                "protocol": "Tcp",
                                "sourcePortRange": "*",
                                "destinationPortRange": "80",
                                "sourceAddressPrefix": "*",
                                "destinationAddressPrefix": "*",
                                "access": "Allow",
                                "priority": 500,
                                "direction": "Inbound"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "name": "Onica_Virtual_Network",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/8"
                    ]
                },
                "subnets": [
                    {                        
                        "name": "Web_subnet_1",
                        "properties": {
                            "addressPrefix": "10.50.10.0/24",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'Web_subnet_NSG')]"
                            }
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', 'Web_subnet_NSG')]"
            ]
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-11-01",
            "name": "Web-lb-pip",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            },
            "zones": [
                "1", "2", "3"
            ]
        },
        {
            "type": "Microsoft.Network/loadBalancers",
            "apiVersion": "2020-11-01",
            "name": "Web_lb",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard",
                "tier": "Regional"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', 'Web-lb-pip')]"
            ],
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "Web_lb_frontEnd",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'Web-lb-pip')]"
                            }
                        }
                    }
                ],
                "backendAddressPools": [
                    {
                        "name": "Web_lb_backEnd"
                    }
                ],
                "probes": [
                    {
                        "name": "httpProbe",
                        "properties": {
                            "protocol": "Tcp",
                            "port": 80,
                            "intervalInSeconds": 5,
                            "numberOfProbes": 2
                        }
                    }
                ],
                "loadBalancingRules": [
                    {
                        "name": "Web_lb_Rule",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[resourceId('Microsoft.Network/loadBalancers/frontendIPConfigurations', 'Web_lb', 'Web_lb_frontEnd')]"
                            },
                            "backendAddressPool": {
                                "id": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', 'Web_lb', 'Web_lb_backEnd')]"
                            },
                            "protocol": "Tcp",
                            "frontendPort": 80,
                            "backendPort": 80,
                            "enableFloatingIP": false,
                            "idleTimeoutInMinutes": 5,
                            "probe": {
                                "id": "[resourceId('Microsoft.Network/loadBalancers/probes', 'Web_lb', 'httpProbe')]"
                            },
                            "disableOutboundSnat": true
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachineScaleSets",
            "apiVersion": "2020-12-01",
            "location": "[resourceGroup().location]",
            "name": "Web-Servers-VMSS",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', 'Onica_Virtual_Network')]",
                "[resourceId('Microsoft.Network/loadBalancers', 'Web_lb')]"
            ],
            "zones": [
                "1", "2", "3"
            ],
            "sku": {
                "name": "Standard_D2as_v4",
                "tier": "Standard",
                "capacity": 3
            },
            "properties": {
                "singlePlacementGroup": false,
                "virtualMachineProfile": {
                    "storageProfile": {
                        "osDisk": {
                            "createOption": "FromImage",
                            "caching": "ReadWrite",
                            "managedDisk": {
                                "storageAccountType": "StandardSSD_LRS"
                            }
                        },
                        "imageReference": {
                            "publisher": "Canonical",
                            "offer": "UbuntuServer",
                            "sku": "18.04-LTS",
                            "version": "latest"
                        }
                    },
                    "osProfile": {
                        "computerNamePrefix": "[concat('Web-Server-', copyIndex(1))]",
                        "adminUsername": "[parameters('adminUsername')]",
                        "adminPassword": "[parameters('adminPassword')]"
                    },
                    "networkProfile": [
                        {
                            "name": "Web-VM-nic"
                        }
                    ]
                },
                "orchestrationMode": "Uniform",
                "scaleInPolicy": {
                    "rules": [
                        "Default"
                    ]
                },
                "overprovision": true,
                "upgradePolicy": {
                    "mode": "Manual"
                },
                "automaticRepairsPolicy": {
                    "enabled": true,
                    "gracePeriod": "PT10M"
                },
                "platformFaultDomainCount": 1,
                "zoneBalance": false
            }
            
        }

    ],
    "outputs": {}
}